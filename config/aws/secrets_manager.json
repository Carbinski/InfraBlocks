{
  "id": "secrets_manager",
  "name": "Secrets Manager",
  "icon": "/aws/Arch_AWS-Secrets-Manager_64.svg",
  "category": "Security",
  "description": "Secrets management service",
  "terraformType": "aws_secretsmanager_secret",
  "defaultConfig": {
    "name": "application-secret",
    "description": "Application secret",
    "recovery_window_in_days": 7
  },
  "configSchema": {
    "name": {
      "type": "string",
      "label": "Secret Name",
      "description": "Name of the secret",
      "required": true
    },
    "description": {
      "type": "string",
      "label": "Description",
      "description": "Purpose of the secret",
      "default": "Application secret"
    },
    "kms_key_id": {
      "type": "string",
      "label": "KMS Key ID",
      "description": "KMS key to encrypt the secret",
      "required": false
    },
    "recovery_window_in_days": {
      "type": "number",
      "label": "Recovery Window (days)",
      "description": "Number of days AWS waits before deleting a secret",
      "default": 7,
      "validation": {
        "min": 0,
        "max": 30
      }
    },
    "force_overwrite_replica_secret": {
      "type": "boolean",
      "label": "Force Overwrite Replica",
      "description": "Allow overwriting replicated secrets",
      "default": false
    }
  }
}
